<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:svg="clr-namespace:Avalonia.Svg;assembly=Avalonia.Svg"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Akari.Settings.Views.MainPage">
  <ScrollViewer>
    <ItemsPresenter Items="{Binding SettingsMenuButtons}" Margin="0 20">
      <ItemsPresenter.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Vertical">
            <Button HorizontalAlignment="Stretch">
              <StackPanel Orientation="Horizontal">
                <Grid Width="100" Height="100" Margin="20 0">
                  <svg:Svg Path="{Binding IconPath}" Margin="10" />
                </Grid>
                <Label Margin="20 0" FontSize="37" VerticalAlignment="Center" Content="{Binding Title}" />
              </StackPanel>
            </Button>
            <Rectangle Margin="35 20" Height="1" Fill="Black" />
          </StackPanel>
        </DataTemplate>
      </ItemsPresenter.ItemTemplate>
    </ItemsPresenter>
  </ScrollViewer>
</UserControl>