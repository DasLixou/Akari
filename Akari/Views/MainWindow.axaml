<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Akari.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="720" Height="950"
        mc:Ignorable="d" d:DesignWidth="720" d:DesignHeight="950"
        x:Class="Akari.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Akari">

  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>

  <Grid ColumnDefinitions="55,*">
    <Grid Grid.Column="0" VerticalAlignment="Stretch" Background="WhiteSmoke">
      <StackPanel VerticalAlignment="Top">
        <Button Command="{Binding SwitchPage}" CommandParameter="0">Scribe</Button>
        <Button Command="{Binding SwitchPage}" CommandParameter="1">Books</Button>
        <Button Command="{Binding SwitchPage}" CommandParameter="2">Calender</Button>
        <Button Command="{Binding SwitchPage}" CommandParameter="3">Cook</Button>
      </StackPanel>
      <StackPanel VerticalAlignment="Bottom">
        <Button Command="{Binding SwitchPage}" CommandParameter="4">Schettings</Button>
      </StackPanel>
    </Grid>
    <Carousel Grid.Column="1" SelectedIndex="{Binding SelectedIndex}" Items="{Binding Pages}" />
  </Grid>
</Window>